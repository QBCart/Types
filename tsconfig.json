{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "publish_types",
    "emitDeclarationOnly": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
